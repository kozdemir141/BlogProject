@{
    Layout = "_Layout";
    ViewBag.Title = "DeletedArticles Index";
}
<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Article" asp-action="DeletedArticles">Deleted Articles</a></li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Deleted Articles
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="deletedArticlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Categories</th>
                        <th>Title</th>
                        <th>Thumbnail</th>
                        <th>Date</th>
                        <th>View Count</th>
                        <th>Comment Count</th>
                        <th>Is Active</th>
                        <th>Is Deleted</th>
                        <th>Created Date</th>
                        <th>Creator</th>
                        <th>ModifiedDate</th>
                        <th>ModifiedByName</th>
                        <th>Transactions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Categories</th>
                        <th>Title</th>
                        <th>Thumbnail</th>
                        <th>Date</th>
                        <th>View Count</th>
                        <th>Comment Count</th>
                        <th>Is Active</th>
                        <th>Is Deleted</th>
                        <th>Created Date</th>
                        <th>Creator</th>
                        <th>ModifiedDate</th>
                        <th>ModifiedByName</th>
                        <th>Transactions</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var article in Model.Articles)
                    {
                    <tr name="@article.Id">
                        <td>@article.Id</td>
                        <td>@article.Category.Name</td>
                        <td>@article.Title</td>
                        <td><img src="~/img/@article.Thumbnail" class="my-image-table" /></td>
                        <td>@article.Date.ToShortDateString()</td>
                        <td>@article.WievsCount</td>
                        <td>@article.CommentCount</td>
                        <td>@article.IsActive</td>
                        <td>@article.IsDeleted</td>
                        <td>@article.CreatedDate.ToShortDateString()</td>
                        <td>@article.CreatedByName</td>
                        <td>@article.ModifiedDate.ToShortDateString()</td>
                        <td>@article.ModifiedByName</td>
                        <td>
                            <a class="btn btn-warning btn-sm btn-undo" data-id="@article.Id"><span class="fas fa-undo"></span></a>
                            <button class="btn btn-danger btn-sm btn-delete" data-id="@article.Id"><span class="fas fa-minus-circle"></span></button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/AdminLTE/js/deletedArticles.js" type="application/ecmascript"></script>
}
